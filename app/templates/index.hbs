
{{#if session.isAuthenticated}}

	<div class="container">
	<div class="container">
		{{#md-card title=session.secure.user.name
			image=session.secure.user.picture
			titleClass="cyan-text"
			id="image-card"}}

			{{#md-card-content}}
				{{session.secure.user.email}}
			{{/md-card-content}}

			{{#md-card-action}}
				<a class="cyan-text" {{action 'login'}}>Login</a>
			{{/md-card-action}}
		{{/md-card}}
	</div></div>

{{else}}

	<div class="container">
		{{#md-card title="Card Title"
			titleClass="cyan-text"
			id="image-card"}}

			{{#md-card-content}}
				Welcome to pi-canvalist!  Please login with your 
				Google account to begin managing your canvassing list.
			{{/md-card-content}}

			{{#md-card-action}}
				<a class="cyan-text" {{action 'login'}}>Login</a>
			{{/md-card-action}}
		{{/md-card}}
	</div>

{{/if}}